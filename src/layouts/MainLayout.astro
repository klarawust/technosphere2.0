---
import Navbar from "../components/Navbar.astro";
const { title } = Astro.props;
---

<div
  class="flex flex-col items-center md:items-start md:flex-row md:gap-12 tracking-wide text-neutral-800"
>
  <Navbar />
  <div class="flex flex-col gap-8 w-56 sm:w-[30rem] md:my-16 mb-16">
    <h1 class="text-3xl">{title}</h1>
    <slot />
  </div>
  {
    title === "About" ? (
      <div class="my-32 mx-4 hidden md:block">
        <img src="/images/klara.jpeg" alt="Me" class="w-52" />
      </div>
    ) : (
      <div />
    )
  }
</div>
