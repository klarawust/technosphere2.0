---
const { type, list: entries } = Astro.props;
---

<div class="flex flex-col gap-4">
  <h1 class="text-2xl">{type}</h1>
  {
    entries.map(
      (entry: {
        title: string;
        companyOrInstitution: string;
        date: string;
        description: string;
      }) => (
        <div class="text-neutral-500 font-light">
          <p>{entry.date}</p>
          <p class="text-neutral-800 font-medium">{`${entry.title}, ${entry.companyOrInstitution}`}</p>
          <p>{entry.description}</p>
        </div>
      )
    )
  }
</div>
