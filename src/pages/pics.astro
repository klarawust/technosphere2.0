---
const images = await Astro.glob("/src/pics/*").then((files) => {
  return files.map((file) => file.default);
});
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/images/illustrations/star.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>pics</title>
</head>
<div class="w-full lg:w-3/5">
  <div class="flex flex-col m-12 items-end">
    <a href="/"><img class="w-8" src="/images/illustrations/x.svg" alt="x" /></a
    >
  </div>
  <div
    class="flex flex-row flex-wrap gap-8 m-12 lg:ml-28 tracking-wide text-neutral-800"
  >
    {
      images.map((pic) => (
        <div class="flex flex-col gap-2">
          <img class="w-36 sm:w-28" src={pic.src} alt="picture" />
        </div>
      ))
    }
  </div>
</div>
